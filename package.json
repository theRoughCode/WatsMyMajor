{
  "name": "WatsMyMajor",
  "version": "1.0.0",
  "description": "A web app that helps Waterloo students pick their courses",
  "engines": {
    "node": "8.11.x"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=./react-ui/src node server",
    "heroku-postbuild": "cd react-ui/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "build": "cd react-ui/ && npm run build",
    "lint": "./node_modules/.bin/eslint . --ext .js --ext .jsx"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "@sentry/browser": "^5.6.1",
    "@sentry/node": "^5.20.1",
    "async": "^2.6.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.3",
    "firebase-admin": "^9.0.0",
    "fuzzy": "^0.1.3",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.3.0",
    "md5-file": "^4.0.0",
    "mobile-detect": "^1.4.3",
    "moment": "^2.22.2",
    "node-schedule": "^1.3.0",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.1.0",
    "react-responsive": "^7.0.0",
    "react-router-dom": "^5.0.1",
    "react-star-ratings": "^2.3.0",
    "redux": "^4.0.1",
    "redux-api-middleware": "^3.0.1",
    "regenerator-runtime": "^0.13.2",
    "request": "^2.88.0",
    "uwaterloo-api": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theRoughCode/WatsMyMajor.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react",
    "waterloo"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "ignore-styles": "^5.0.1"
  }
}
