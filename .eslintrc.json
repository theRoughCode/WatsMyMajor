{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard",
    "standard-react",
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "standard/no-callback-literal": "off",
    "semi": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "curly": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-prototype-builtins": "off",
    "jsx-quotes": [
      "error",
      "prefer-double"
    ]
  }
}